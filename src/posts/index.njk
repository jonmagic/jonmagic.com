---
layout: layout
title: jonmagic.com posts
---

<div class="posts-grid">
{%- set allPosts = collections.posts | reverse -%}
{%- for post in allPosts -%}
  {%- set cropData = postCropData[post.fileSlug] -%}
  <a href="{{ post.url }}" class="post-card-link">
    <div class="post-card">
      <div class="post-card-background"
           data-crop-x="{{ cropData.x if cropData else 0 }}"
           data-crop-y="{{ cropData.y if cropData else 0 }}"
           style="--crop-x: {{ cropData.xPercent if cropData else 0 }}%; --crop-y: {{ cropData.yPercent if cropData else 0 }}%;">
      </div>
      <div class="post-card-content">
        <h3 class="post-title">{{ post.data.title }}</h3>
        <div class="post-date">{{ post.date.toISOString().split('T')[0] }}</div>
      </div>
    </div>
  </a>
{%- endfor -%}
</div>
