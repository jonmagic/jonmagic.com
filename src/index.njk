<div class="home-layout">
  <main class="main-content">
    {# Show the most recent post in full #}
    {% set latest = collections.posts | reverse | first %}
    {% if latest %}
      <article>
        <h2><a href="{{ latest.url }}">{{ latest.data.title }}</a></h2>
        {{ latest.templateContent | safe }}
      </article>
    {% else %}
      <p>No posts yet.</p>
    {% endif %}
  </main>
</div>
