#!/bin/bash

# Path to the file containing the URLs
URL_FILE="$(dirname "$0")/../urls.txt"

# Check if the file exists and is readable
if [[ ! -r "$URL_FILE" ]]; then
  echo "URL file not found or not readable: $URL_FILE"
  exit 1
fi

while IFS= read -r url || [[ -n "$url" ]]; do
  [[ -z "$url" ]] && continue
  script/migrate "$url"
done < "$URL_FILE"
